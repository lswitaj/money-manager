<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_summary_item">

    <data>
        <variable
            name="position"
            type="com.lswitaj.moneymanager.data.database.Position" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.lswitaj.moneymanager.fragnent_summary">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_extra_small"
            android:text="@{position.positionName}"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/buy_price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/position_name_example" />

        <!-- TODO(style those numbers) -->
        <!-- TODO(to add a nice price formatter) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/buy_price"
            style="@style/SmallPriceText"
            android:text="@{position.buyPrice}"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintEnd_toStartOf="@id/quantity"
            app:layout_constraintStart_toEndOf="@id/name"
            tools:text="@string/price_example" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quantity"
            style="@style/SmallPriceText"
            android:text="@{position.quantity}"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintEnd_toStartOf="@id/current_price"
            app:layout_constraintStart_toEndOf="@id/buy_price"
            tools:text="@string/quantity_example" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/current_price"
            style="@style/SmallPriceText"
            android:text="@{position.lastClosePrice}"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/quantity"
            tools:text="@string/price_example" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>