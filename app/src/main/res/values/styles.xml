<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
    </style>

    <style name="ShortText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:ems">@integer/input_chars_short</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>

    <style name="SmallPriceText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:maxLength">@integer/max_numbers</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TableHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_extra_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="DividerPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/material_on_surface_emphasis_high_type</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="DividerSecondary" parent="DividerPrimary">
        <item name="android:background">@color/material_on_surface_stroke</item>
    </style>
</resources>